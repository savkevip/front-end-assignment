<button
    class="{{$props.disabled ? `button button-disabled` : `button`}}" 
    type={{$props.type ? $props.type : "button"}}
    @if($props.disabled) 
        disabled
    @endif    
>
    @if($props.icon)
        @!component('components/ui/icon', {
            icon: $props.icon
        })
    @end
    <span class="button-label">{{$props.label}}</span>
</button>